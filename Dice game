import random


high_score = 0
def dice_game():

    while True:
        user = int(input("\n1.roll the dice    \n2.leave Game \nEnter your choice: "))
        if user == 1:
            number1 = random.randint(1, 6)
            number2 = random.randint(1, 6)
            print("you roll", number1, "\nyou roll", number2)
            print("you have rolled the total of :", number1 + number2 )
        else:
            print("Goodbye!")
            break

dice_game()
